<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <script type="text/javascript" src="noti.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- <% if (firstEntered){ %> -->
    <script>
      var startTime = "<%- firstEntered %>";
      var queNum = "<%- queNum %>";
      var imgIndex = "<%- imgIndex %>";
      var colors = "<%- colors %>";
    </script>
    <!-- <% } %> -->
    <link rel="stylesheet" href="index.css" />
    <title>CSS Battle</title>
  </head>

  <body>
    <div id="container">
      <div id="notiCon"></div>
      <div id="menu">
        <div id="question">QUESTION <%= queNum.slice(1) %> OF 3</div>
        <div id="clock"></div>
        <button class="sub" id="testButton">Rules</button>
        <button class="sub" id="rulesButton">Test</button>
        <button class="sub" id="submit">Submit</button>
      </div>

      <div id="colorCon">
        <div id="copyCon">
          <% for(var i=0; i < colors[queNum][imgIndex].colors.length; i++) { %>
          <div
            class="colorCopy"
            data-color="<%= colors[queNum][imgIndex].colors[i] %>"
          ></div>
          <% } %>
          <p style="color: white">Click on the colors to copy their codes</p>
        </div>
      </div>

      <div id="mainArea">
        <div id="editorCon">
          <div class="title">Editor</div>
          <div id="editor"></div>
        </div>

        <div id="preview">
          <div class="title">Output</div>
          <div id="sliderCon">
            <div id="slider">
              <div id="referenceImage"></div>
            </div>
            <iframe id="previewMain" style="pointer-events: none"></iframe>
          </div>
        </div>

        <div id="previewImg">
          <div class="title">Expected Output</div>
          <img id="output" />
        </div>
      </div>
    </div>

    <script src="ace/ace.js" type="text/javascript"></script>
    <script
      src="ace/theme-twilight.js"
      type="text/javascript"
      charset="utf-8"
    ></script>
    <script
      src="ace/mode-html.js"
      type="text/javascript"
      charset="utf-8"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/clipboard@2.0.10/dist/clipboard.min.js"></script>
    <script src="index.js" type="text/javascript"></script>
  </body>
</html>
